@page
@model Razor_EF.Pages.ClientModel
@{
    ViewData["Title"] = "Клиенты";
}

<div class="container mt-4">
    <h2>Клиенты</h2>

    <!-- Форма создания -->
    <form method="post" asp-page-handler="Create" class="mb-4">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label asp-for="Client.Name" class="form-label"></label>
                <input asp-for="Client.Name" class="form-control" placeholder="Полное имя" />
                <span asp-validation-for="Client.Name" class="text-danger"></span>
            </div>
            <div class="col-md-5">
                <label asp-for="Client.Email" class="form-label"></label>
                <input asp-for="Client.Email" class="form-control" placeholder="example@mail.com" />
                <span asp-validation-for="Client.Email" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-success w-100">Добавить</button>
            </div>
        </div>
    </form>

    <!-- Список клиентов -->
    @if (Model.Clients.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Clients[0].Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Clients[0].Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Clients[0].Email)</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Clients)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>
                                <form method="post" asp-page-handler="Edit" asp-route-id="@c.Id" class="d-flex align-items-center">
                                    <input type="hidden" name="Client.Id" value="@c.Id" />
                                    <input name="Client.Name" value="@c.Name" class="form-control form-control-sm me-2" style="width: 180px;" />
                                    <input name="Client.Email" value="@c.Email" class="form-control form-control-sm me-2" style="width: 200px;" />
                                    <button type="submit" class="btn btn-sm btn-warning">Сохранить</button>
                                </form>
                            </td>
                            <td>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@c.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Удалить клиента @c.Name?')">
                                        Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Нет клиентов.</div>
    }

    <a asp-page="/Index" class="btn btn-secondary mt-3">← Назад</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}