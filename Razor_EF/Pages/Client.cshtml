@page
@model Razor_EF.Pages.ClientModel
@{
    ViewData["Title"] = "Клиенты";
}

<div class="container mt-4">
    <h2>Клиенты</h2>

    <!-- Форма создания -->
    <form method="post" asp-page-handler="Create" class="mb-4">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label asp-for="Client.Name" class="form-label"></label>
                <input asp-for="Client.Name" class="form-control" placeholder="Полное имя" />
                <span asp-validation-for="Client.Name" class="text-danger"></span>
            </div>
            <div class="col-md-5">
                <label asp-for="Client.Email" class="form-label"></label>
                <input asp-for="Client.Email" class="form-control" placeholder="example@mail.com" />
                <span asp-validation-for="Client.Email" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-success w-100">Добавить</button>
            </div>
        </div>
    </form>

    <!-- Список клиентов -->
    @if (Model.Clients.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        @* то же самое с Tag-helper *@
                        @* <th><label asp-for="Clients[0].Id"></label></th>
                        <th><label asp-for="Clients[0].Name"></label></th>
                        <th><label asp-for="Clients[0].Email"></label></th> *@
                        <th>@Html.DisplayNameFor(m => m.Clients[0].Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Clients[0].Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Clients[0].Email)</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Clients)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>
                                <form method="post" asp-page-handler="Edit" asp-route-id="@c.Id" class="d-flex align-items-center">
                                    <input type="hidden" name="Client.Id" value="@c.Id" />
                                    <input name="Client.Name" value="@c.Name" class="form-control form-control-sm me-2" style="width: 180px;" />
                                    <input name="Client.Email" value="@c.Email" class="form-control form-control-sm me-2" style="width: 200px;" />
                                    <button type="submit" class="btn btn-sm btn-warning">Сохранить</button>
                                </form>
                            </td>
                            <td>@c.Email</td>
                            @* <td>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@c.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Удалить клиента @c.Name?')">
                                        Удалить
                                    </button>
                                </form>
                            </td> *@
                            <td>
                                <!-- Кнопка удаления -->
                                <button class="btn btn-sm btn-danger" type="button"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal_@c.Id">

                                    Удалить
                                </button>
 
                                <!-- Модальное окно по центру экрана -->
                                <div class="modal fade" id="deleteModal_@c.Id" tabindex="-1"
                                     aria-labelledby="deleteModalLabel_@c.Id" aria-hidden="true"
                                     data-bs-backdrop="static">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <!-- modal-dialog-centered для центрирования -->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel_@c.Id">

                                                    Подтверждение удаления
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Вы уверены, что хотите удалить клиента <strong>@c.Name</strong>?</p>
                                                <p class="text-muted small">Email: @c.Name</p>
                                            </div>
                                            <div class="modal-footer">
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@c.Id">
                                                    <button type="submit" class="btn btn-danger">

                                                        Да, удалить
                                                    </button>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">

                                                        Отмена
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Нет клиентов.</div>
    }

    <a asp-page="/Index" class="btn btn-secondary mt-3">← Назад</a>
</div>

